<Window x:Class="Views.MainDeliveryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Delivery Screen"
        Width="420" Height="640"
        Background="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
	<Grid>
		<Border CornerRadius="18"
				BorderBrush="Black"
				BorderThickness="2"
				Background="White"
				Padding="16"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
			<StackPanel Orientation="Vertical"
						Margin="4"
						FlowDirection="RightToLeft">

				<!-- Header -->
				<TextBlock Text="Main Delivery Screen"
						   FontSize="22"
						   FontWeight="Bold"
						   Foreground="Black"
						   HorizontalAlignment="Center"
						   Margin="0,6,0,14"/>

				<!-- Section 1: First block -->
				<Border CornerRadius="12"
						Background="LightGray"
						BorderBrush="Black"
						BorderThickness="1"
						Padding="12"
						Margin="0,0,0,12">
					<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
						<TextBlock Text="Delivery Details"
								   FontSize="16"
								   FontWeight="Bold"
								   Foreground="Black"
								   HorizontalAlignment="Center"
								   Margin="0,4"/>
						<TextBlock Text="View and Update"
								   FontSize="13"
								   Foreground="Black"
								   HorizontalAlignment="Center"
								   Margin="0,2,0,10"/>
						<Button Content="Update"
								Background="Gray"
								Foreground="Black"
								BorderBrush="Black"
								BorderThickness="1"
								Width="120"
								HorizontalAlignment="Center"
								Padding="8,6"
								Margin="0,4,0,0"/>
					</StackPanel>
				</Border>

				<!-- Section 2: Second block -->
				<Border CornerRadius="12"
						Background="LightGray"
						BorderBrush="Black"
						BorderThickness="1"
						Padding="12"
						Margin="0,0,0,12">
					<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
						<TextBlock Text="Order Details In Handling"
								   FontSize="15"
								   FontWeight="Bold"
								   Foreground="Black"
								   Margin="0,2,0,6"/>
						<TextBlock Text="(If available) Read only"
								   FontSize="12"
								   Foreground="Black"
								   Margin="0,0,0,10"/>

						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
							<Button Content="Finish Handling"
									Background="Gray"
									Foreground="Black"
									BorderBrush="Black"
									BorderThickness="1"
									Width="150"
									Height="38"
									Margin="4,0"/>
							<Button Content="Handling Details"
									Background="DarkGray"
									Foreground="Black"
									BorderBrush="Black"
									BorderThickness="1"
									Width="150"
									Height="38"
									Margin="4,0"/>
						</StackPanel>

						<Button Content="Mark as Delivery Completed"
								Background="DarkGray"
								Foreground="Black"
								BorderBrush="Black"
								BorderThickness="1"
								HorizontalAlignment="Center"
								Padding="8,6"
								Width="200"
								Margin="0,4,0,0"/>
					</StackPanel>
				</Border>

				<!-- Footer -->
				<StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,6,0,0">
					<Separator Margin="0,4" Background="DarkGray"/>

					<Grid Margin="0,8,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Button Grid.Column="0"
								Content="Delivery History"
								Background="Gray"
								Foreground="Black"
								BorderBrush="Black"
								BorderThickness="1"
								Height="44"
								Margin="4,0,6,0"
								HorizontalAlignment="Stretch"/>
						<Button Grid.Column="1"
								Content="Select Order"
								Background="Gray"
								Foreground="Black"
								BorderBrush="Black"
								BorderThickness="1"
								Height="44"
								Margin="6,0,4,0"
								HorizontalAlignment="Stretch"/>
					</Grid>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Window>