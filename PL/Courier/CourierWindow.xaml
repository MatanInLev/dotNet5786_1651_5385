
    <Window x:Class="PL.Courier.CourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Courier"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        xmlns:pl="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Courier Details" Height="650" Width="550"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Converters -->
        <pl:CourierStatusConverter x:Key="CourierStatusConverter"/>
        
        <!-- Modern Button Template -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Courier Details" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,15"/>

        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="ID (T&quot;Z):" 
                               FontWeight="SemiBold" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding CurrentCourier.Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6"/>

                    <!-- Full Name -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Full Name:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding CurrentCourier.Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6"/>

                    <!-- Phone -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Phone:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding CurrentCourier.Phone, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Email:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             Text="{Binding CurrentCourier.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6"/>

                    <!-- Courier Status -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Status:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <Border Grid.Row="4" Grid.Column="1" 
                            Background="#F5F7FA"
                            CornerRadius="4"
                            Padding="8,6"
                            Margin="0,6">
                        <TextBlock FontSize="12"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource CourierStatusConverter}">
                                    <Binding Path="CurrentCourier.IsActive"/>
                                    <Binding Path="CurrentCourier.OrderInProgress"/>
                                </MultiBinding>
                            </TextBlock.Text>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentCourier.IsActive}" Value="False">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- Is Active Toggle -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Set Active:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <CheckBox Grid.Row="5" Grid.Column="1" 
                              Content="Courier is Active"
                              IsChecked="{Binding CurrentCourier.IsActive, Mode=TwoWay}"
                              VerticalAlignment="Center" 
                              Margin="0,6"
                              FontSize="12"
                              Foreground="#555"/>

                    <!-- Max Distance -->
                    <TextBlock Grid.Row="6" Grid.Column="0" 
                               Text="Max Distance (km):" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBox Grid.Row="6" Grid.Column="1" 
                             Text="{Binding CurrentCourier.MaxDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6"/>

                    <!-- Vehicle Type -->
                    <TextBlock Grid.Row="7" Grid.Column="0" 
                               Text="Vehicle Type:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <ComboBox Grid.Row="7" Grid.Column="1" 
                              ItemsSource="{Binding VehicleOptions}"
                              SelectedItem="{Binding CurrentCourier.Vehicle, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,6"/>

                    <!-- Start Date -->
                    <TextBlock Grid.Row="8" Grid.Column="0" 
                               Text="Start Date:" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <DatePicker Grid.Row="8" Grid.Column="1" 
                                SelectedDate="{Binding CurrentCourier.StartWorkDate, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                Background="#F5F7FA"
                                BorderThickness="0"
                                Padding="8,6"
                                Margin="0,6"
                                HorizontalAlignment="Left"
                                Width="150"/>

                    <!-- Separator -->
                    <Separator Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,10"/>

                    <!-- Delivered On Time -->
                    <TextBlock Grid.Row="10" Grid.Column="0" 
                               Text="Delivered On Time:" 
                               FontWeight="SemiBold" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBlock Grid.Row="10" Grid.Column="1" 
                               Text="{Binding CurrentCourier.OrdersProvidedOnTime}" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#27AE60"
                               VerticalAlignment="Center" 
                               Margin="0,6"/>

                    <!-- Delivered Late -->
                    <TextBlock Grid.Row="11" Grid.Column="0" 
                               Text="Delivered Late:" 
                               FontWeight="SemiBold" 
                               FontSize="12"
                               Foreground="#555"
                               VerticalAlignment="Center" 
                               Margin="0,6,15,6"/>
                    <TextBlock Grid.Row="11" Grid.Column="1" 
                               Text="{Binding CurrentCourier.OrdersProvidedLate}" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#E74C3C"
                               VerticalAlignment="Center" 
                               Margin="0,6"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Content="{Binding ButtonText}" 
                    Click="btnAction_Click" 
                    Style="{StaticResource ModernButton}"
                    Background="#9B59B6"
                    Width="130" 
                    Height="40" 
                    Margin="5,0"/>
            <Button Content="{Binding DeleteButtonText}" 
                    Click="btnDelete_Click" 
                    Style="{StaticResource ModernButton}"
                    Background="{Binding DeleteButtonBackground}"
                    Foreground="White"
                    Width="130" 
                    Height="40" 
                    Margin="5,0"/>
        </StackPanel>

    </Grid>
</Window>