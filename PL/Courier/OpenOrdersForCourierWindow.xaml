<Window x:Class="PL.Courier.OpenOrdersForCourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="Open Orders" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Filter by type:" VerticalAlignment="Center"/>
            <ComboBox Width="160"
                      ItemsSource="{Binding OrderTypeOptions}"
                      SelectedValue="{Binding SelectedType, Mode=TwoWay}"
                      SelectedValuePath="Value"
                      DisplayMemberPath="Label"
                      Margin="8,0,0,0"/>
            <Button Content="Refresh" Width="100" Click="Refresh_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Margin="0,10,0,10" ItemsSource="{Binding Orders}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="Orders_SelectionChanged" SelectedItem="{Binding SelectedOrder}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Address" Binding="{Binding CustomerAddress}" Width="200"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceFromCompany, StringFormat={}{0:F2}}" Width="110"/>
                <DataGridTextColumn Header="Schedule Status" Binding="{Binding ScheduleStatus}" Width="110"/>
                <DataGridTemplateColumn Header="Action" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Collect" Click="Collect_Click" Tag="{Binding Id}" Padding="6,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" Padding="6" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="Selection:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding SelectedOrder.CustomerAddress}" VerticalAlignment="Center" Width="250" TextWrapping="Wrap"/>
                <TextBlock Text="Coords:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding SelectedOrder.Latitude, StringFormat={}{0:F4}}"/>
                <TextBlock VerticalAlignment="Center" Text="," Margin="2,0"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding SelectedOrder.Longitude, StringFormat={}{0:F4}}"/>
                <Button Content="Close" Width="90" Click="Close_Click" Margin="12,0,0,0" HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" BorderBrush="#DDD" BorderThickness="1" Padding="4" Height="240">
            <WebBrowser Name="wbMap" />
        </Border>
    </Grid>
</Window>
