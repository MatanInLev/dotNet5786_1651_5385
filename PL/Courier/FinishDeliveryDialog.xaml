<Window x:Class="PL.Courier.FinishDeliveryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="Complete Delivery" Height="220" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select a completion status" 
                   FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>

        <ComboBox Grid.Row="1" Margin="0,12,0,0"
                  ItemsSource="{Binding StatusOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectedItem="{Binding SelectedStatus, RelativeSource={RelativeSource AncestorType=Window}}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Confirm" Width="80" Margin="0,0,8,0" Click="Validate_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
