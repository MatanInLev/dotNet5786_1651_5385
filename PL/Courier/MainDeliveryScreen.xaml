<Window x:Class="PL.Courier.MainDeliveryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Delivery Screen"
        Width="900" Height="620"
        Background="#FFFFFF"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
  <Window.Resources>
    <Style x:Key="GrayscaleButton" TargetType="Button">
      <Setter Property="Background" Value="#D9D9D9"/>
      <Setter Property="Foreground" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#000000"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="8,6"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="4"
                    SnapsToDevicePixels="True">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                RecognizesAccessKey="True"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="#BFBFBF"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="#808080"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
              </Trigger>
              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="border" Property="Background" Value="#F2F2F2"/>
                <Setter Property="Foreground" Value="#808080"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="GrayscaleButtonNarrow" TargetType="Button" BasedOn="{StaticResource GrayscaleButton}">
      <Setter Property="Padding" Value="6,4"/>
      <Setter Property="Height" Value="36"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="Width" Value="220"/>
    </Style>

    <Style x:Key="GrayscaleButtonDark" TargetType="Button" BasedOn="{StaticResource GrayscaleButton}">
      <Setter Property="Background" Value="#808080"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>

    <Style x:Key="GrayscaleButtonDarkest" TargetType="Button" BasedOn="{StaticResource GrayscaleButton}">
      <Setter Property="Background" Value="#404040"/>
      <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>
  </Window.Resources>

  <Grid Margin="12">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Left column: Courier details + DB actions -->
    <StackPanel Grid.Column="0" Margin="20" VerticalAlignment="Top">
      <TextBlock Text="Courier Details:" FontWeight="Bold" Margin="0,0,0,10"/>

      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="ID:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Id, TargetNullValue=''}" Width="120" VerticalAlignment="Center"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="Name:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Name, TargetNullValue=''}" Width="250" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="Name:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Name, TargetNullValue=''}" Width="250" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,4">
        <TextBlock Text="Name:" Width="140" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentCourier.Name, TargetNullValue=''}" Width="250" VerticalAlignment="Center"/>
      </StackPanel>

      <Grid>
        <Border Width="480"
                Height="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFFFFF"
                BorderBrush="#000000"
                BorderThickness="2"
                CornerRadius="20"
                Padding="20">
          <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <!-- Header -->
            <TextBlock Text="Main Delivery Screen"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#000000"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,12"/>

            <!-- Block 1 -->
            <Border CornerRadius="12"
                    Background="#F2F2F2"
                    BorderBrush="#000000"
                    BorderThickness="1"
                    Padding="14"
                    Margin="0,12,0,0">
              <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Delivery Details"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           Margin="0,2"/>
                <TextBlock Text="View and Update"
                           FontSize="13"
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,12"/>
                <Button x:Name="btnUpdate"
                        Content="Update"
                        Click="btnUpdate_Click"
                        Style="{StaticResource GrayscaleButton}"
                        Width="140"
                        HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>

            <!-- Block 2 -->
            <Border CornerRadius="12"
                    Background="#F2F2F2"
                    BorderBrush="#000000"
                    BorderThickness="1"
                    Padding="14"
                    Margin="0,16,0,0">
              <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <TextBlock Text="Order Being Processed"
                           FontSize="15"
                           FontWeight="Bold"
                           Foreground="#000000"
                           Margin="0,2,0,6"/>
                <TextBlock Text="(If available) Read only"
                           FontSize="12"
                           Foreground="#000000"
                           Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                  <Button x:Name="btnFinish"
                          Content="Finish Handling"
                          Click="btnFinish_Click"
                          Style="{StaticResource GrayscaleButton}"
                          Width="200"
                          Height="40"
                          Margin="4,0"/>
                  <Button x:Name="btnDetails"
                          Content="Handling Details"
                          Click="btnDetails_Click"
                          Style="{StaticResource GrayscaleButtonDark}"
                          Width="200"
                          Height="40"
                          Margin="4,0"/>
                </StackPanel>

                <Button x:Name="btnMarkCompleted"
                        Content="Mark as Delivery Completed"
                        Click="btnMarkCompleted_Click"
                        Style="{StaticResource GrayscaleButtonDarkest}"
                        Width="260"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,0"/>
              </StackPanel>
            </Border>

            <!-- Footer -->
            <StackPanel Orientation="Vertical" Margin="0,18,0,0">
              <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="btnHistory"
                        Grid.Column="0"
                        Content="Delivery History"
                        Click="btnHistory_Click"
                        Style="{StaticResource GrayscaleButton}"
                        Height="44"
                        HorizontalAlignment="Stretch"
                        Margin="4,0,6,0"/>
                <Button x:Name="btnSelect"
                        Grid.Column="1"
                        Content="Select Order"
                        Click="btnSelect_Click"
                        Style="{StaticResource GrayscaleButton}"
                        Height="44"
                        HorizontalAlignment="Stretch"
                        Margin="6,0,4,0"/>
              </Grid>
            </StackPanel>
          </StackPanel>
        </Border>
      </Grid>

    </StackPanel> <!-- end left StackPanel -->

  </Grid>
</Window>