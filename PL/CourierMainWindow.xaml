<Window x:Class="PL.Courier.CourierMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="Courier Dashboard"
        Width="900"
        Height="650"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="#F5F7FA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Button Template -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Panel Style -->
        <Style x:Key="InfoPanel" TargetType="Border">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Courier Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,15"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Courier Details Card -->
            <Border Grid.Row="0" Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="My Profile" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#3498DB"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Courier ID" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,0,4"/>
                            <Border Style="{StaticResource InfoPanel}">
                                <TextBlock Text="{Binding CurrentCourier.Id, FallbackValue='N/A'}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"/>
                            </Border>
                        </StackPanel>

                        <!-- Name -->
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Name" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,0,4"/>
                            <Border Style="{StaticResource InfoPanel}">
                                <TextBlock Text="{Binding CurrentCourier.Name, FallbackValue='N/A'}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"/>
                            </Border>
                        </StackPanel>

                        <!-- Vehicle -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Vehicle" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,0,4"/>
                            <Border Style="{StaticResource InfoPanel}">
                                <TextBlock Text="{Binding CurrentCourier.Vehicle, FallbackValue='N/A'}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Current Order Card -->
            <Border Grid.Row="2" Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="Current Delivery" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#3498DB"
                               Margin="0,0,0,12"/>

                    <!-- Order in Progress -->
                    <Border Style="{StaticResource InfoPanel}" MinHeight="100">
                        <Grid>
                            <!-- No Order Message -->
                            <TextBlock Text="No active delivery at this time" 
                                       FontSize="13" 
                                       FontStyle="Italic"
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="20">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentOrderInProgress}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Order Details (when exists) -->
                            <StackPanel Margin="10">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentOrderInProgress}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="Order ID:" 
                                               FontWeight="SemiBold"
                                               Foreground="#555"
                                               Margin="0,4,15,4"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding CurrentOrderInProgress.OrderId, FallbackValue='N/A'}" 
                                               Foreground="#2C3E50"
                                               Margin="0,4"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="Delivery ID:" 
                                               FontWeight="SemiBold"
                                               Foreground="#555"
                                               Margin="0,4,15,4"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding CurrentOrderInProgress.DeliveryId, FallbackValue='N/A'}" 
                                               Foreground="#2C3E50"
                                               Margin="0,4"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                               Text="Customer:" 
                                               FontWeight="SemiBold"
                                               Foreground="#555"
                                               Margin="0,4,15,4"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" 
                                               Text="{Binding CurrentOrderInProgress.CustomerName, FallbackValue='N/A'}" 
                                               Foreground="#2C3E50"
                                               Margin="0,4"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" 
                                               Text="Distance:" 
                                               FontWeight="SemiBold"
                                               Foreground="#555"
                                               Margin="0,4,15,4"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" 
                                               Foreground="#2C3E50"
                                               Margin="0,4">
                                        <Run Text="{Binding CurrentOrderInProgress.Distance, StringFormat='{}{0:F2}', FallbackValue='0.00'}"/>
                                        <Run Text=" km"/>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Content="📋 Delivery History" 
                    Width="220" 
                    Height="45" 
                    Margin="0,0,10,0"
                    Background="#3498DB"
                    Style="{StaticResource ModernButton}"
                    Click="BtnHistory_Click"/>
            <Button Content="📦 View Orders" 
                    Width="220" 
                    Height="45" 
                    Margin="10,0,0,0"
                    Background="#27AE60"
                    Style="{StaticResource ModernButton}"
                    Click="BtnOrders_Click"/>
        </StackPanel>
    </Grid>
</Window>