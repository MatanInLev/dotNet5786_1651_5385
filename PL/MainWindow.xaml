<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Main Management Window" Height="500" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20" VerticalAlignment="Center">

            <Label Content="Configuration Parameters:" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,3">
                <Label Content="Max Range (km):" Width="140"/>
                <TextBox Width="80" VerticalContentAlignment="Center" Text="{Binding Configuration.MaxRange, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,3">
                <Label Content="Max Delivery Time:" Width="140"/>
                <TextBox Width="80" VerticalContentAlignment="Center" ToolTip="Format: hh:mm:ss" Text="{Binding Configuration.MaxDeliveryTime, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,3">
                <Label Content="Risk Range:" Width="140"/>
                <TextBox Width="80" VerticalContentAlignment="Center" ToolTip="Format: hh:mm:ss" Text="{Binding Configuration.RiskRange, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,3">
                <Label Content="Inactivity Time:" Width="140"/>
                <TextBox Width="80" VerticalContentAlignment="Center" ToolTip="Format: hh:mm:ss" Text="{Binding Configuration.InactivityTime, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <Button Content="Update Configuration" Margin="0,15,0,30" Padding="5" HorizontalAlignment="Left" Width="150"/>

            <Label Content="Database Actions:" FontWeight="Bold"/>
            <Button Content="Initialize DB" Margin="0,5" Padding="5"/>
            <Button Content="Reset DB" Margin="0,5" Padding="5"/>

            <Button Content="Open List Window" Margin="0,30,0,0" Padding="10" FontWeight="Bold" Background="#DDDDDD"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="{Binding CurrentTime}"
                   FontWeight="Bold" 
                   FontSize="20"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

            <Button Content="Add Minute" Click="btnAddOneMinute_click" Margin="0,2" Padding="5"/>
            <Button Content="Add Hour" Click="btnAddOneHour_click" Margin="0,2" Padding="5"/>
            <Button Content="Add Day" Click="btnAddOneDay_click" Margin="0,2" Padding="5"/>
            <Button Content="Add Month" Click="btnAddOneMonth_click" Margin="0,2" Padding="5"/>
            <Button Content="Add Year" Click="btnAddOneYear_click" Margin="0,2" Padding="5"/>
        </StackPanel>

    </Grid>
</Window>